<%- include('partials/header'); -%>

<div class="container-fluid">
  <div class="row post-block">

    <div class="col-lg-8 ps-5 pe-5">
      <h1 class="post-title"><%= postTitle %></h1>
      <img class="w-100" src="<%= postImage %>" alt="">
      <%- postContent %>
    </div>

    <div class="col-lg-4 ps-5 pe-5">
      <h2 class="text-center fw-bold top-posts-title">Recent Posts</h2>

      <% topPosts.forEach((post) => { %>
        <div class="row position-relative mb-3 border border-2 rounded">
          <div class="col-md-5 d-flex align-items-center">
            <img src="<%= post.imageUrl %>" class="rounded img-fluid" alt="">
          </div>
          <div class="col-md-7 p-2 ps-md-0">
            <h5 class="text-start"><%= post.title %></h5>
            <a href="/posts/<%= post.id %>" class="stretched-link"></a>
          </div>
        </div>
      <% }); %>

    </div>
</div>

<%- include('partials/footer'); -%>
